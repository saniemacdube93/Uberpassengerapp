<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a091b"
    android:id="@+id/rootLayout"
    tools:context="com.example.user.uberuber.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:text="TRUCK HAULAGE "
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="APP"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/map_image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/elf"

            />







    </LinearLayout>


    <TextView
        android:id="@+id/txt_driver_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:text="LOOKING FOR THE DRIVER APP?"
        android:textSize="12sp"
        android:textColor="@color/bottomText"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_above="@+id/txt_driver_app"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnSignIn"
            android:textColor="@android:color/white"
            android:background="@drawable/btnsignin_bg_rounded_corner"
            android:text="SIGN IN"
            android:layout_marginRight="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />



        <Button
            android:id="@+id/btnRegister"
            android:textColor="@color/btnRegister"
            android:background="@drawable/btnregister_bg_rounded_corner"
            android:text="REGISTER"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>
